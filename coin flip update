import random

def flip():
    result= random.randint(0,1)
    if result ==0:
        return "heads"
    else:
        return "tails"



print("lets play a game guess hears or tails")
flip_result= flip() 
guess_1= input("heads")
guess_2= input("tails")

if guess_1 == flip_result:
     print(f"the result is{flip_result} you win")
else:
     print(f"the result is{flip_result} sorry try again")

if guess_2 == flip_result:
     print(f"the result is{flip_result} you win")
else:
     print(f"the result is{flip_result} sorry try again")
